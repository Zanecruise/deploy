{
  "openapi": "3.0.0",
  "info": {
    "title": "FoundLab TrustScore API",
    "version": "1.0.0"
  },
  "paths": {
    "/trustscore": {
      "post": {
        "summary": "Calcula TrustScore com base no comportamento da carteira",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "wallet": { "type": "string" },
                  "evento": { "type": "string" },
                  "valor": { "type": "number" }
                },
                "required": ["wallet", "evento", "valor"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado do c√°lculo de TrustScore",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "wallet": { "type": "string" },
                    "evento": { "type": "string" },
                    "valor": { "type": "number" },
                    "trustscore": { "type": "number" },
                    "decisao": { "type": "string" },
                    "tier": { "type": "string" },
                    "badge": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
